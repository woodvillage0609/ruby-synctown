<a id="notice"><%= notice %></a>

<div class="sidebar_mypage">

  <div class="sidebar_mypage_left">
    <%=link_to image_for(@user), user_path %><br>
    <strong>Name : </strong> <%= @user.name %><br>
    <%= @user.likes.count %>個の投稿にいいね！しています。
  </div>

<div class="sidebar_mypage_right">
</div>

</div>


<div class="under_bar">

  <div class="under_bar_left">
    <ul>
     <% if current_user?(@user) %>
      <li><%= link_to 'New Note', new_note_path, :style=>"color:black;" %></li>
      <li><%= link_to 'Edit Profile', edit_user_path(current_user.id),:style=>"color:black;" %></li>
    <% end %>
      <li><%= link_to "Picks", like_notes_user_path(@user.id),:style=>"color:black;" %></li>
      <li><%= link_to "Comment Lists", post_notes_user_path(@user.id),:style=>"color:black;" %></li>
      <li style="border-right:1px solid #808080;"><%= link_to "Following Lists", subscribed_user_path(@user.id),:style=>"color:black;" %></li>
    </ul>
</div>

<div class="under_bar_right">
    <%= render 'users/stats_mypage' %>
    <%= render 'users/follow_form' if user_signed_in? %>
</div>

</div>


<div class="contents">

<%= render@notes %>

</div>

