
<div class="user-sidebar" style="background-color:white;">

<div class="user-sidebar-image" style="text-align:center;">
<a><%=link_to image_for(@user), user_path(@user.id) %></a>
</div>

<a>
  <%= render 'users/stats' %>
</a>

<p>
  <span class="far fa-user"> :</span>
  <%= @user.name %>
</p>

<p>
  <span class="far fa-envelope"> :</span> 
  <%= @user.email %>
</p>

<p>
  <%= @user.likes.count %>個の投稿にいいね！しています。
</p>

<a style="text-align:center;">
  <%= render 'users/follow_form' if user_signed_in? %>
</a>

<ul>
   <% if current_user?(@user) %>
  <li><a><%= link_to 'New Note', new_note_path, class:"user-sidebar-icon" %></a>
  </li>
  <li><%= link_to 'Edit Profile', edit_user_path(current_user.id), class:"user-sidebar-icon"  %></li>
  <% end %>
  <li><%= link_to "Pick Notes", like_notes_user_path(@user.id), class:"user-sidebar-icon"  %></li>
  <li><%= link_to "Following Lists", subscribed_user_path(@user.id), class:"user-sidebar-icon"  %>
  </li>
  <li><%= link_to "Pick Articles", comment_articles_user_path(@user.id), class:"user-sidebar-icon" %>
  </li>

  <% if current_user?(@user) && current_user.email == "woodvillage0609@gmail.com" %>
   <li><%= link_to 'New Article', new_article_path, class:"user-sidebar-icon"  %></li>
  <li><%= link_to 'New Micropost', new_micropost_path , class:"user-sidebar-icon" %></li>
  <% end %>
  
</ul>

</div>