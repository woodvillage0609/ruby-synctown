
<div class="row" style="margin:0px;">

  <div class="col-md-2" style="position:fixed; z-index:2; left:0px; padding:0px; background-color:white;">

   <%= render "sidebar" %>

  </div>

  <div class="col-md-2">
  </div>

  <div class="col-md-10" style="background-color:#F0F0F0; padding:0px;">

    <div class="jumbotron" style="margin:0px;">

  	  	<div class="under-jumbotron">

        <% @microposts.limit(1).offset(0).each do |micropost| %>

        <h1>Theme of the week</h1>

  	  	<p>今週のテーマは<strong>「<%= micropost.title %>」</strong>です。</p>
        <br>

        <% micropost.opinions.limit(6).order(created_at: :desc).each do |opinion| %>

        <div class="micropost-table" style="padding:10px 15px;">

        <table style="text-align:left;">

        <tr>
        <td>

         <%= image_for(opinion.user) %>
         <a style="color:white;"><strong><%= opinion.user.name %></strong></a>

         </td>
         </tr>

         <tr>
         <td>

         <%= opinion.body.truncate(80) %>

         </td>
         </tr>

         </table>

         </div>

         <% end %>

        <br><br>
  	  	<a><%=link_to "詳細を見る", micropost_path(micropost), class:"btn btn-warning btn-lg", :role=>"button", :style=>"margin:20px 0px;" %></a>

        <% end %>

  	    </div>

    </div>

    <div class="micropost-contents">
      <%= render @microposts.offset(1) %>
    </div>

  </div>


</div>

