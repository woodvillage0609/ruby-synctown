<table class="post-list">
<tr>
<td style="font-size:9px; text-align:center; padding-right:10px">
   <%= image_for(post.user) %><br>
   <%= post.user.name %>
</td>
<td style="width:650px; font-size:13px;">
   <%= post.body %>
</td>

<td>
<% if current_user?(post.user) %>
  <%= link_to 'Destroy', [post.note, post],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
<% end %>
</td>
</tr>
</table>