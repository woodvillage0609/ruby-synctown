<div class="login-note">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class:"login-form-control-title" %>
 </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"login-form-control-title" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"login-form-control-title" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"login-form-control-title" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"form-control-icon" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
