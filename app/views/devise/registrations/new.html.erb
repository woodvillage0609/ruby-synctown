<div class="login-note">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class: "form-control" %>
 </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if f.object.password_required? %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

 <% end %>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success", :style=>"background-color:#239b76;" %>
  </div>
<% end %>

  <%= link_to " Facebookでログイン", user_omniauth_authorize_path(:facebook), class: "btn facebook fa fa-facebook", :style=>"color:white; width:100%; padding:10px 0px;" %>

  <%= link_to " Twitterでログイン", user_omniauth_authorize_path(:twitter), class: "btn twitter fa fa-twitter", :style=>"color:white; width:100%; padding:10px 0px;" %>


</div>
