
<div class="note-sidebar"  style="height:auto; border-bottom:1px solid #808080; border-right:1px solid #808080;">


  <% if user_signed_in? %>

  <div class="note-side-photo" style="height:200px; padding-top:60px; ;border-bottom:1px solid #808080; text-align:center;">
      <%=link_to image_for(current_user), user_path(current_user) %><br>
      <%=link_to current_user.name, user_path(current_user), class:"black" %>
  </div>

  <p style="padding:10px; text-align:center; border-bottom:1px solid #808080; "><strong>あなたのいいね！投稿一覧</strong></p>

    <div class="note-side-list" style="padding:0px 20px; height:610px; overflow-y:scroll;">
     <% current_user.like_notes.each do |note| %>
        <h5><strong><%=link_to note.title, note, class:"black" %></strong></h5>
        <p style="font-size:12px; border-bottom:1px dotted #808080; margin-bottom:20px; padding-bottom:15px;">
          <%= note.content.truncate(30) %>
        </p>
     <% end %>
    </div>


  <% else %>


  <div class="sidebar-all-photo">
  <%= image_tag("IMG_0100.jpg", {:style=>"height:100%; width:100%;"}) %>
 </div>

 <div class="sidebar-all-photo-sub" >
  <a><%=link_to "アカウント作成", new_user_registration_path, class: "btn btn-default" %></a>
 </div>


  <p style="padding:10px; text-align:center; border-bottom:1px solid #808080;"><strong>ランダム投稿一覧</strong></p>

     <div class="note-side-list" style="padding:0px 20px; height:610px; overflow-y:scroll;">
     <% @random_notes.limit(8).each do |random_note| %>
        <h5><strong><%=link_to random_note.title, note_path(random_note), class:"black" %></strong></h5>
        <p style="font-size:12px; border-bottom:1px dotted #808080; margin-bottom:20px; padding-bottom:15px;">
          <%= random_note.content.truncate(30) %>
        </p>
     <% end %>
    </div>


<% end %>


</div>