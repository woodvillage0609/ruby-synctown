<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<div class="article-top-wrapper" style=" height: 550px; margin-left:250px; width: 100%;">

<ul>
<li>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel", style="height:500px; width:800px;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">

    <div class="item active">
      <% @articles.limit(1).offset(0).each do |article| %>
        <%= image_tag article.photo, :style=>"height:500px; width:800px;" %>
      <div class="carousel-caption">
        <h3><%=link_to article.title, article, :style=>"color:white;" %></h3>
      </div>
      <% end %>
    </div>

    <div class="item">
    <% @articles.limit(1).offset(1).each do |article| %>
     <%=image_tag article.photo,  :style=>"height:500px; width:800px;" %>
      <div class="carousel-caption">
        <h3><%= link_to article.title, article, :style=>"color:white;" %></h3>
      </div>
    <% end %>
    </div>

     <div class="item">
        <% @articles.limit(1).offset(2).each do |article| %>
        <%=image_tag article.photo,  :style=>"height:500px; width:800px;" %>
          <div class="carousel-caption">
            <h3><%= link_to article.title, article, :style=>"color:white;" %></h3>
          </div>
        <% end %>
     </div>

      <div class="item">
        <% @articles.limit(1).offset(3).each do |article| %>
        <%= image_tag article.photo, :style=>"height:500px; width:800px;" %>
          <div class="carousel-caption">
            <h3><%= link_to article.title, article, :style=>"color:white;" %></h3>
          </div>
        <% end %>
     </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

</li>

<li>

<div class="article-side-wrapper" >
    <ul>
      <% @articles.limit(2).offset(4).each do |article| %>
      <li>
        <%= image_tag article.photo, :style=> "height:248px; width:400px;" %>
        <%= link_to article.title, article, :style=>"color:white; position:absolute; bottom:30px; padding:0px 18px; font-size:20px;" %>
      </li>
      <% end %>
    </ul>
</div>

</li>
</ul>

</div>

<div class="contents" >

<%= render 'article' %>

</div>

<%= link_to 'New Article', new_article_path %>



