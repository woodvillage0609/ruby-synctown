
<div class="row" style="background-color:#F0F0F0;">

   <div class="col-lg-2" style="position:fixed; z-index:5; left:0px; padding:0px; background-color:white;">

     <%= render "sidebar" %>

   </div>

   <div class="col-lg-2"></div>


<div class="col-lg-7" style="background-color:#F0F0F0;">

	<p id="notice"><%= notice %></p>

	<%= render "show" %>

</div>	

<div class="col-lg-3" style="padding-top:20px;">

<% @random_articles.limit(4).each do |random_article| %>
<div class="random-article" style="width:80%; height:280px; border:0px solid #808080; margin-bottom:40px; border-radius:5px 5px 10px 10px;">

<ul>
<li>	
<%=link_to image_tag(random_article.photo, {:style=>"width:100%; height:200px; border-radius:5px 5px 0px 0px;"}), article_path(random_article) %>
</li>

<li style="padding:5px; background-color:white;">
<%= link_to random_article.title.truncate(50), article_path(random_article), :style=>"color:black; font-size:16px;" %>
</li>

</div>

<% end %>

</div>

</div>