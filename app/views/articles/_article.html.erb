<% @articles.limit(nil).offset(8).each do |article| %>

<div class="article-content">

<%= link_to image_tag(article.photo, {:style=> "height:180px; width: 298px; padding-bottom:15px;"}), article %>

<ul style="padding:0px 10px;">
   <li>
        <a>
          <%=link_to article.title, article, :style=>"font-size:18px; color:black;" %>
        </a><br><br>
        <a>
          <%=link_to article.content.truncate(30), article, :style=>"color:black; font-size:13px; padding:0px 5px;" %>
        </a>
  </li>    

        <a style="font-size:13px; color:#808080; position:absolute; bottom:5px; left:10px;">
          <span class="fa fa-connectdevelop">
          <%= article.source %>
        </span>
        </a>
        <a style="font-size:13px; color:#808080; position:absolute; bottom:5px; right:10px;">
           <%= article.created_at.to_formatted_s(:without_second) %>
        </a>

</ul>

</div>

<% end %>